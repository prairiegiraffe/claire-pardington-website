        </div>
      </section>

      <!-- Timeline Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <Timeline client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Timeline</h3>
              <p class="text-muted mb-4">Company milestones displayed as a timeline with connecting lines</p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">timeline-stats</code>
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">Timeline</code>
                </div>
                <div><strong>Complexity:</strong> <span class="text-orange-600">Medium</span></div>
