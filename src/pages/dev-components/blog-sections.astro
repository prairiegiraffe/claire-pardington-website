---
import Layout from '~/layouts/Layout.astro';
import DevComponentsSidebar from '~/components/ui/DevComponentsSidebar.astro';
import ThreeColumn from '~/components/ui/page-sections/blog-sections/ThreeColumn';
import ThreeColumnWithImages from '~/components/ui/page-sections/blog-sections/ThreeColumnWithImages';
import ThreeColumnWithBackgroundImages from '~/components/ui/page-sections/blog-sections/ThreeColumnWithBackgroundImages';
import SingleColumn from '~/components/ui/page-sections/blog-sections/SingleColumn';
import SingleColumnWithImages from '~/components/ui/page-sections/blog-sections/SingleColumnWithImages';
import WithFeaturedPost from '~/components/ui/page-sections/blog-sections/WithFeaturedPost';
import WithPhotoAndList from '~/components/ui/page-sections/blog-sections/WithPhotoAndList';
