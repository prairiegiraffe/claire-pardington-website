---
import { Icon } from 'astro-icon/components';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links?: Array<Links>;
  secondaryLinks?: Array<Link>;
  socialLinks?: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [] } = Astro.props;
---

<footer class="relative bg-black text-white py-12 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-8 items-center">
      <!-- Left: Company Info -->
      <div class="md:col-span-3 space-y-1 text-center md:text-left">
        <p class="text-sm font-semibold">Claire Elizabeth Pardington LLC</p>
        <p class="text-xs">Creative Director. Designer.</p>
        <p class="text-xs">Â© 2025 All rights reserved.</p>
        <p class="text-xs">
          <a href="mailto:clairepardington@gmail.com" class="hover:text-gray-300 transition">
            clairepardington@gmail.com
          </a>
        </p>
      </div>

      <!-- Center: Social Links -->
      <div class="md:col-span-5 flex justify-center">
        <ul class="flex gap-4">
          {
            socialLinks.map(({ ariaLabel, href, icon }) => (
              <li>
                <a
                  class="text-white hover:text-gray-300 transition p-2 inline-flex items-center"
                  aria-label={ariaLabel}
                  href={href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {icon && <Icon name={icon} class="w-6 h-6" />}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Right: Newsletter Signup -->
      <div class="md:col-span-4 flex justify-center md:justify-end">
        <form class="w-full max-w-sm">
          <label for="newsletter-email" class="block text-sm mb-2">Updates</label>
          <div class="flex gap-2">
            <input
              type="email"
              id="newsletter-email"
              placeholder="Your email"
              class="flex-1 px-4 py-2 bg-white text-black border border-white focus:outline-none focus:ring-2 focus:ring-white"
              required
            />
            <button type="submit" class="px-6 py-2 bg-white text-black hover:bg-gray-200 transition font-medium">
              Sign Up
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</footer>
