                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">icons</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">gradient</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<SideBySideWithDetails />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Simple Side-by-side Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
