---
import Layout from '~/layouts/PageLayout.astro';
import SimpleCentered from '~/components/ui/page-sections/testimonials/SimpleCentered';
import WithLargeAvatar from '~/components/ui/page-sections/testimonials/WithLargeAvatar';
import WithOverlappingImage from '~/components/ui/page-sections/testimonials/WithOverlappingImage';
import WithBackgroundImage from '~/components/ui/page-sections/testimonials/WithBackgroundImage';
import SideBySide from '~/components/ui/page-sections/testimonials/SideBySide';
import WithStarRating from '~/components/ui/page-sections/testimonials/WithStarRating';
import Grid from '~/components/ui/page-sections/testimonials/Grid';
import SubtleGrid from '~/components/ui/page-sections/testimonials/SubtleGrid';
import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: 'Testimonials — Component Library',
  description: 'Collection of testimonial and social proof components for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
const components = getComponentsBySubcategory('testimonials');
