---
import Layout from '~/layouts/Layout.astro';
import DevComponentsSidebar from '~/components/ui/DevComponentsSidebar.astro';
import StackedWithFooterActions from '~/components/ui/elements/flyout-menus/StackedWithFooterActions';
import FullWidthTwoColumns from '~/components/ui/elements/flyout-menus/FullWidthTwoColumns';
import StackedWithFooterList from '~/components/ui/elements/flyout-menus/StackedWithFooterList';
import FullWidth from '~/components/ui/elements/flyout-menus/FullWidth';
import SimpleWithDescriptions from '~/components/ui/elements/flyout-menus/SimpleWithDescriptions';
import TwoColumn from '~/components/ui/elements/flyout-menus/TwoColumn';
import Simple from '~/components/ui/elements/flyout-menus/Simple';
import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: 'Flyout Menus — Component Library',
  description: 'Collection of flyout menu components for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
const components = getComponentsBySubcategory('flyout-menus');
