<Layout metadata={metadata}>
  <!-- Back to Works Button -->
  <div class="py-8 pl-4 md:pl-10">
    <a
      href="/works"
      class="inline-flex items-center gap-2 text-black hover:opacity-70 transition-opacity uppercase tracking-wide text-sm"
    >
      <svg
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M19 12H5M12 19l-7-7 7-7"></path>
      </svg>
      Back to Works
    </a>
  </div>

  <!-- Title and Text Section -->
  <div class="container mx-auto px-4 pb-16">
    <div class="max-w-4xl mx-auto text-center space-y-6">
      <h1 class="text-3xl md:text-4xl uppercase tracking-wide" style="font-weight: 200;">
        VS VERY SEXY COLLECTION
      </h1>

      <div class="text-base leading-relaxed">
        <p>
          As an Associate Designer for the Very Sexy Collection, my designs consistently topped bestseller lists,
          featured prominently on catalogue covers and the website. They gained extensive media attention, appearing in
          prestigious outlets like Vogue and W Magazine, as well as influential blogs, solidifying their status as
          customer favorites.
        </p>
      </div>
    </div>
  </div>

  <!-- Image Gallery -->
  <div class="container mx-auto px-4 pb-16">
    <div class="image-grid">
      {
        galleryImages.map((img, index) => (
          <div class="image-item" data-lightbox={`lightbox-${index}`}>
            <img
              src={img.src}
              alt={`Victoria's Secret Very Sexy Collection ${index + 1}`}
              class="w-full cursor-pointer"
              style="height: 500px; object-fit: cover;"
            />
          </div>
        ))
      }
    </div>
  </div>

  <!-- Lightbox Modals -->
  {
    galleryImages.map((img, index) => (
      <div
        id={`lightbox-${index}`}
        class="hidden fixed inset-0 bg-black bg-opacity-90 z-50 flex items-center justify-center p-4"
        onclick={`document.getElementById('lightbox-${index}').classList.add('hidden')`}
      >
        <img
          src={img.src}
          alt={`Victoria's Secret Very Sexy Collection ${index + 1}`}
          style="max-height: 90vh; max-width: 100%; width: auto; height: auto; object-fit: contain;"
        />
      </div>
    ))
  }
</Layout>

<style>
  .image-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px;
  }

  @media (max-width: 1024px) {
    .image-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .image-grid {
      grid-template-columns: 1fr;
    }
  }

  .image-item {
    overflow: hidden;
  }

  .image-item img {
    transition: transform 0.3s ease;
  }

  .image-item:hover img {
    transform: scale(1.05);
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    // Grid lightbox
    document.querySelectorAll('.image-item').forEach((item) => {
      item.addEventListener('click', () => {
        const lightboxId = (item as HTMLElement).dataset.lightbox;
        if (lightboxId) {
          const lightbox = document.getElementById(lightboxId);
          if (lightbox) {
            lightbox.classList.remove('hidden');
          }
        }
      });
    });
  });
</script>
