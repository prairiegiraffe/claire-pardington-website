---
import Layout from '~/layouts/Layout.astro';
import DevComponentsSidebar from '~/components/ui/DevComponentsSidebar.astro';
import Simple404 from '~/components/ui/page-sections/404-pages/Simple404';
import SplitWith404Image from '~/components/ui/page-sections/404-pages/SplitWith404Image';
import WithPopularPages404 from '~/components/ui/page-sections/404-pages/WithPopularPages404';
import WithBackgroundImage404 from '~/components/ui/page-sections/404-pages/WithBackgroundImage404';
import WithNavbarAndFooter404 from '~/components/ui/page-sections/404-pages/WithNavbarAndFooter404';
import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: '404 Pages — Component Library',
  description: 'Collection of 404 error page components for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
const components = getComponentsBySubcategory('404-pages');
---

<Layout metadata={metadata}>
  <DevComponentsSidebar>
    <div class="container mx-auto px-4 py-8 max-w-7xl">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex items-center gap-2 text-sm text-muted mb-2">
          <a href="/dev-components" class="hover:text-primary">Component Library</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span>404 Pages</span>
        </div>
        <h1 class="text-4xl font-bold mb-4">404 Pages</h1>
        <p class="text-lg text-muted max-w-3xl">
          Error page layouts with clear AI naming conventions. Perfect for handling page not found scenarios gracefully.
        </p>
      </div>

      <!-- Component Library -->
      <div class="space-y-16">
        <!-- Simple 404 Component -->
        <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
          <!-- Component Preview -->
          <div class="border-b border-gray-200 dark:border-gray-700">
            <Simple404 client:load />
          </div>

          <!-- Component Info -->
          <div class="p-6 bg-gray-50 dark:bg-gray-800">
            <div class="grid lg:grid-cols-3 gap-6">
              <div class="lg:col-span-1">
                <h3 class="text-xl font-semibold text-primary mb-2">Simple 404</h3>
                <p class="text-muted mb-4">Centered 404 page with minimal design and dual CTAs</p>

                <div class="text-sm space-y-2">
                  <div>
                    <strong>AI Reference:</strong>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">simple-404</code>
                  </div>
                  <div>
                    <strong>Component:</strong>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">Simple404</code>
                  </div>
                  <div><strong>Complexity:</strong> <span class="text-green-600">Simple</span></div>
                </div>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                  <div class="flex flex-wrap gap-1">
                    {
                      components
                        .find((c) => c.id === 'simple-404')
                        ?.tags.map((tag) => (
                          <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                        ))
                    }
                  </div>
                </div>
              </div>

              <div class="lg:col-span-2">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
                <pre
                  class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<Simple404 />`}</code>
              </pre>
              </div>
            </div>
          </div>
        </section>

        <!-- Split with Image 404 Component -->
        <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
          <!-- Component Preview -->
          <div class="border-b border-gray-200 dark:border-gray-700">
            <SplitWith404Image client:load />
          </div>

          <!-- Component Info -->
          <div class="p-6 bg-gray-50 dark:bg-gray-800">
            <div class="grid lg:grid-cols-3 gap-6">
              <div class="lg:col-span-1">
                <h3 class="text-xl font-semibold text-primary mb-2">Split with Image 404</h3>
                <p class="text-muted mb-4">Split layout 404 page with company logo, footer, and side image</p>

                <div class="text-sm space-y-2">
                  <div>
                    <strong>AI Reference:</strong>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                      >split-with-404-image</code
                    >
                  </div>
                  <div>
                    <strong>Component:</strong>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                      >SplitWith404Image</code
                    >
                  </div>
                  <div><strong>Complexity:</strong> <span class="text-yellow-600">Medium</span></div>
                </div>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                  <div class="flex flex-wrap gap-1">
                    {
                      components
                        .find((c) => c.id === 'split-with-404-image')
