---
import Layout from '~/layouts/PageLayout.astro';
import WithStickyProductScreenshot from '~/components/ui/page-sections/content-sections/WithStickyProductScreenshot';
import WithTestimonial from '~/components/ui/page-sections/content-sections/WithTestimonial';
import WithImageTitles from '~/components/ui/page-sections/content-sections/WithImageTitles';
import TwoColumnsWithScreenshot from '~/components/ui/page-sections/content-sections/TwoColumnsWithScreenshot';
import WithTestimonialAndStats from '~/components/ui/page-sections/content-sections/WithTestimonialAndStats';
import SplitWithImage from '~/components/ui/page-sections/content-sections/SplitWithImage';
import Centered from '~/components/ui/page-sections/content-sections/Centered';
import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: 'Content Sections — Component Library',
  description: 'Collection of content section components for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
const components = getComponentsBySubcategory('content-sections');
---

<Layout metadata={metadata}>
  <div class="container mx-auto px-4 py-8 max-w-7xl">

    <!-- Developer Warning Banner -->
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-8">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.19-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
            Development Component Library
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <p>This page is for development purposes only. Components use Tailwind UI Plus license. Do not expose to public.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-muted mb-2">
        <a href="/dev-components" class="hover:text-primary">Component Library</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span>Content Sections</span>
      </div>
      <h1 class="text-4xl font-bold mb-4">Content Sections</h1>
      <p class="text-lg text-muted max-w-3xl">
        General content layout components with clear AI naming conventions. Perfect for about pages, company information, and detailed content presentations.
      </p>
    </div>

    <!-- Component Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">7</div>
        <div class="text-sm text-muted">Components</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">100%</div>
        <div class="text-sm text-muted">Responsive</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">100%</div>
        <div class="text-sm text-muted">Dark Mode</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">AI Ready</div>
        <div class="text-sm text-muted">Optimized</div>
      </div>
    </div>

    <!-- Component Library -->
    <div class="space-y-16">

      <!-- With Sticky Product Screenshot Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <WithStickyProductScreenshot client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">With Sticky Product Screenshot</h3>
              <p class="text-muted mb-4">Complex content layout with sticky product screenshot and feature list</p>

              <div class="text-sm space-y-2">
                <div><strong>AI Reference:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">with-sticky-product-screenshot</code></div>
                <div><strong>Component:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">WithStickyProductScreenshot</code></div>
                <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  {components.find(c => c.id === 'with-sticky-product-screenshot')?.tags.map(tag => (
                    <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                  ))}
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<WithStickyProductScreenshot />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- With Testimonial Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
