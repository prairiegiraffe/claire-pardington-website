---
import Layout from '~/layouts/Layout.astro';
import DevComponentsSidebar from '~/components/ui/DevComponentsSidebar.astro';
import SimpleHero from '~/components/ui/heroes/SimpleHero';
import SplitHero from '~/components/ui/heroes/SplitHero';

const metadata = {
  title: 'Hero Components Library — AstroWind Dev',
  description: 'Collection of hero section components for development reference.',
  robots: { index: false, follow: false }, // Hide from search engines
};

const heroComponents = [
  {
    id: 'simple-hero',
    name: 'Simple Hero',
    description: 'Centered hero with gradient background and dual CTAs',
    code: `<SimpleHero
  title="Build something amazing"
  subtitle="Start building your next project with our professionally designed components."
  ctaText="Get started"
  ctaHref="#"
  secondaryCtaText="Learn more"
  secondaryCtaHref="#"
/>`,
  },
  {
    id: 'split-hero',
    name: 'Split Hero',
    description: 'Two-column layout with text on left, image on right',
    code: `<SplitHero
  title="Scale your business with our platform"
  subtitle="Everything you need to grow your business, all in one place."
  ctaText="Start free trial"
  ctaHref="#"
  imageUrl="your-image-url"
/>`,
  },
];
---

<Layout metadata={metadata}>
<DevComponentsSidebar>
  <div class="container mx-auto px-4 py-8 max-w-7xl">
        <div class="mb-8">
      <h1 class="text-4xl font-bold text-center mb-4">Hero Components</h1>
      <p class="text-lg text-center text-muted max-w-3xl mx-auto">
        AI-friendly hero section components with clear naming and usage examples.
      </p>
    </div>

    <!-- Component Library -->
    <div class="space-y-16">
      <!-- Simple Hero Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SimpleHero client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-2 gap-6">
            <div>
              <h3 class="text-xl font-semibold text-primary mb-2">Simple Hero</h3>
              <p class="text-muted mb-4">Centered hero with gradient background and dual CTAs</p>

              <div class="text-sm text-muted">
                <p>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono">simple-hero</code>
                </p>
                <p>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono">SimpleHero</code>
                </p>
              </div>
            </div>

            <div>
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{heroComponents[0].code}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Split Hero Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SplitHero client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-2 gap-6">
            <div>
              <h3 class="text-xl font-semibold text-primary mb-2">Split Hero</h3>
              <p class="text-muted mb-4">Two-column layout with text on left, image on right</p>

              <div class="text-sm text-muted">
                <p>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono">split-hero</code>
                </p>
                <p>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono">SplitHero</code>
                </p>
              </div>
            </div>

            <div>
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{heroComponents[1].code}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Navigation -->
    <div class="mt-12 text-center">
      <a href="/styles-guide" class="inline-flex items-center text-primary hover:text-primary/80 font-medium">
        ← Back to Styles Guide
      </a>
    </div>
  </div>
</DevComponentsSidebar>
</Layout>
