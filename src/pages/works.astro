---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';
import creativeAndDesign from '~/assets/images/Creative and Design.webp';
import heatWave from '~/assets/images/works-landing/02 HEAT WAVE.webp';
import pardingtonCollective from '~/assets/images/works-landing/03 PARDINGTON COLLECTIVE.webp';
import seDeshabillier from '~/assets/images/works-landing/04 SE DESHABILLIER.webp';
import pcSpring2024 from '~/assets/images/works-landing/05 PC SPRING 2024.webp';
import interiorDesign from '~/assets/images/works-landing/06 INTERIOR DESIGN.webp';
import wonderland from '~/assets/images/works-landing/07 WONDERLAND.webp';
import interiorDesign2018 from '~/assets/images/works-landing/08 INTERIOR DESIGN.webp';
import amour from '~/assets/images/works-landing/09 AMOUR.webp';
import designerCollection from '~/assets/images/works-landing/10 DESIGNER COLLECTION.webp';
import verySexy from '~/assets/images/works-landing/11 VERY SEXY.webp';
import manipulatedBody from '~/assets/images/works-landing/12 MANIPULATED BODY.webp';
import iFeelItInMyBones from '~/assets/images/works-landing/13 I FEEL IT IN MY BONES.webp';
import riding from '~/assets/images/works-landing/14 RIDING.webp';

const metadata = {
  title: 'Works - Claire Pardington',
};
---

<Layout metadata={metadata}>
  <!-- Headline -->
  <div class="w-full text-center py-12">
    <Image src={creativeAndDesign} alt="Creative Direction & Design" class="mx-auto w-full max-w-[300px] h-auto" />
  </div>

  <!-- Video Background Section -->
  <div class="sticky top-0 w-full max-h-[600px] h-[600px] overflow-hidden bg-black">
    <video
      autoplay
      loop
      muted
      playsinline
      webkit-playsinline
      class="w-full h-full object-cover"
      style="max-height: 600px;"
    >
      <source src="/Fashion-BG-Video.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>
  </div>

  <!-- Content that scrolls over the video -->
  <div class="relative bg-white z-10">
    <div class="container mx-auto px-4 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Card 1 -->
        <div class="flex flex-col w-full">
          <div
            class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto bg-black flex items-center justify-center"
          >
            <p class="text-white text-lg md:text-xl uppercase tracking-wide text-center px-4">PORTFOLIO COMING SOON</p>
          </div>
          <p class="text-xs uppercase tracking-wide">
            KHAITE: ARCHITECTURAL ROMANCE FALL 2025 CONCEPTUAL CREATIVE DIRECTION & DESIGN
          </p>
        </div>

        <!-- Card 2 -->
        <a href="/heat-becomes-her" class="flex flex-col w-full hover:opacity-80 transition-opacity">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image src={heatWave} alt="Heat Becomes Her" class="w-full h-full object-cover" />
          </div>
          <p class="text-xs uppercase tracking-wide">HEAT BECOMES HER CONCEPTUAL CREATIVE DIRECTION & DESIGN</p>
        </a>

        <!-- Card 3 -->
        <a href="/pardington-collective" class="flex flex-col w-full hover:opacity-80 transition-opacity">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image
              src={pardingtonCollective}
              alt="Pardington Collective Fall 2024"
              class="w-full h-full object-cover"
            />
          </div>
          <p class="text-xs uppercase tracking-wide">
            PARDINGTON COLLECTIVE: FALL 2024 BRAND CREATION, CREATIVE DIRECTION, DESIGN, & EXECUTION OF FIRST RTW
            CLASSICS COLLECTION
          </p>
        </a>

        <!-- Card 4 -->
        <a href="/se-deshabiller" class="flex flex-col w-full hover:opacity-80 transition-opacity">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image src={seDeshabillier} alt="Se Deshabillier Fall 2024" class="w-full h-full object-cover" />
          </div>
          <p class="text-xs uppercase tracking-wide">
            SE DESHABILLIER: FALL 2024 CONCEPTUAL CREATIVE DIRECTION & DESIGN
          </p>
        </a>

        <!-- Card 5 -->
        <a href="/pardington-collective-spring-2024" class="flex flex-col w-full hover:opacity-80 transition-opacity">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image src={pcSpring2024} alt="Pardington Collective Spring 2024" class="w-full h-full object-cover" />
          </div>
          <p class="text-xs uppercase tracking-wide">
            PARDINGTON COLLECTIVE: SPRING 2024 CONCEPTUAL CREATIVE DIRECTION & DESIGN
          </p>
        </a>

        <!-- Card 6 -->
        <a href="/homestead" class="flex flex-col w-full hover:opacity-80 transition-opacity">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image src={interiorDesign} alt="Interior Design New Home Build 2021" class="w-full h-full object-cover" />
          </div>
          <p class="text-xs uppercase tracking-wide">
            INTERIOR DESIGN: NEW HOME BUILD 2021 CREATIVE DIRECTION, DESIGN, & PROJECT MANAGER
          </p>
        </a>

        <!-- Card 7 -->
        <a href="/welcome-to-wonderland" class="flex flex-col w-full hover:opacity-80 transition-opacity">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image src={wonderland} alt="Welcome to Wonderland" class="w-full h-full object-cover" />
          </div>
          <p class="text-xs uppercase tracking-wide">WELCOME TO WONDERLAND CONCEPTUAL CREATIVE DIRECTION & DESIGN</p>
        </a>

        <!-- Card 8 -->
        <a href="/home-renovation-2018" class="flex flex-col w-full hover:opacity-80 transition-opacity">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image
              src={interiorDesign2018}
              alt="Interior Design Entire Home Renovation 2018"
              class="w-full h-full object-cover"
            />
          </div>
          <p class="text-xs uppercase tracking-wide">
            INTERIOR DESIGN: ENTIRE HOME RENOVATION 2018 CREATIVE DIRECTION, DESIGN, & PROJECT MANAGER
          </p>
        </a>

        <!-- Card 9 -->
        <a href="/vs-amour-collection" class="flex flex-col w-full hover:opacity-80 transition-opacity">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image
              src={amour}
              alt="Victoria's Secret Designer Collection Amour Fall/Holiday 2014"
              class="w-full h-full object-cover"
            />
          </div>
          <p class="text-xs uppercase tracking-wide">
            VICTORIA'S SECRET DESIGNER COLLECTION: AMOUR FALL/ HOLIDAY 2014 CREATIVE DIRECTION, DESIGN, & COLLECTION
            EXECUTION
          </p>
        </a>

        <!-- Card 10 -->
        <a href="/vs-collected-works" class="flex flex-col w-full group">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image
              src={designerCollection}
              alt="Victoria's Secret Designer Collection Collected Works"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <p class="text-xs uppercase tracking-wide">
            VICTORIA'S SECRET DESIGNER COLLECTION COLLECTED WORKS CREATIVE DIRECTION, DESIGN, & COLLECTION EXECUTION
          </p>
        </a>

        <!-- Card 11 -->
        <a href="/vs-very-sexy" class="flex flex-col w-full group">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image
              src={verySexy}
              alt="Victoria's Secret Very Sexy Collection"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <p class="text-xs uppercase tracking-wide">
            VICTORIA'S SECRET VERY SEXY COLLECTION MISC CREATIVE DIRECTION, DESIGN, & COLLECTION EXECUTION
          </p>
        </a>

        <!-- Card 12 -->
        <a href="/manipulated-body" class="flex flex-col w-full group">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image
              src={manipulatedBody}
              alt="Manipulated Body"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <p class="text-xs uppercase tracking-wide">MANIPULATED BODY CONCEPTUAL CREATIVE DIRECTION & DESIGN</p>
        </a>

        <!-- Card 13 -->
        <a href="/i-feel-it-in-my-bones" class="flex flex-col w-full group">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image
              src={iFeelItInMyBones}
              alt="I Feel It In My Bones"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <p class="text-xs uppercase tracking-wide">I FEEL IT IN MY BONES CONCEPTUAL CREATIVE DIRECTION & DESIGN</p>
        </a>

        <!-- Card 14 -->
        <a href="/riding-the-chemically-imbalanced-rollercoaster" class="flex flex-col w-full group">
          <div class="border-[5px] md:border-[10px] border-black mb-3 h-[200px] w-auto overflow-hidden">
            <Image
              src={riding}
              alt="Riding the Chemically Imbalanced Rollercoaster"
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <p class="text-xs uppercase tracking-wide">
            RIDING THE CHEMICALLY IMBALANCED ROLLERCOASTER MAY CAUSE ADVERSE AFFECTS ON THE NERVES, DEAR CONCEPTUAL
            CREATIVE DIRECTION & DESIGN
          </p>
        </a>
      </div>
    </div>
  </div>
</Layout>
