---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(0 0 0);
    --aw-color-secondary: rgb(64 64 64);
    --aw-color-accent: rgb(0 0 0);

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(0 0 0);
    --aw-color-text-muted: rgb(64 64 64);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(0 0 0);

    ::selection {
      background-color: rgb(200 200 200);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(255 255 255);
    --aw-color-secondary: rgb(200 200 200);
    --aw-color-accent: rgb(255 255 255);

    --aw-color-text-heading: rgb(255 255 255);
    --aw-color-text-default: rgb(255 255 255);
    --aw-color-text-muted: rgb(200 200 200);
    --aw-color-bg-page: rgb(0 0 0);

    ::selection {
      background-color: rgb(64 64 64);
      color: rgb(255 255 255);
    }
  }

  body {
    font-weight: 300;
  }
</style>
