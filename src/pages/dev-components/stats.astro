---
import Layout from '~/layouts/Layout.astro';
import DevComponentsSidebar from '~/components/ui/DevComponentsSidebar.astro';
import Simple from '~/components/ui/page-sections/stats/Simple';
import SimpleGrid from '~/components/ui/page-sections/stats/SimpleGrid';
import WithBackgroundImage from '~/components/ui/page-sections/stats/WithBackgroundImage';
import SplitWithImage from '~/components/ui/page-sections/stats/SplitWithImage';
import Timeline from '~/components/ui/page-sections/stats/Timeline';
import Stepped from '~/components/ui/page-sections/stats/Stepped';
import WithTwoColumnDescription from '~/components/ui/page-sections/stats/WithTwoColumnDescription';
import WithDescription from '~/components/ui/page-sections/stats/WithDescription';
// import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: 'Stats — Component Library',
  description: 'Collection of statistics and metrics components for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
// const components = getComponentsBySubcategory('stats');
---

<Layout metadata={metadata}>
<DevComponentsSidebar>
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-muted mb-2">
        <a href="/dev-components" class="hover:text-primary">Component Library</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span>Stats</span>
      </div>
      <h1 class="text-4xl font-bold mb-4">Stats</h1>
      <p class="text-lg text-muted max-w-3xl">
        Statistics and metrics display components for showcasing company data, achievements, and key performance
        indicators.
      </p>
    </div>

    <!-- Component Library -->
    <div class="space-y-16">
      <!-- Simple Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <Simple client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Simple</h3>
              <p class="text-muted mb-4">Clean centered layout with three key statistics</p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">simple-stats</code>
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">Simple</code>
                </div>
                <div><strong>Complexity:</strong> <span class="text-green-600">Simple</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">stats</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">centered</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">simple</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">clean</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<Simple />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Simple Grid Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SimpleGrid client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Simple Grid</h3>
              <p class="text-muted mb-4">Four statistics in a grid layout with background tiles</p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">simple-grid-stats</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">SimpleGrid</code>
                </div>
                <div><strong>Complexity:</strong> <span class="text-green-600">Simple</span></div>
              </div>

              <div class="mt-4">
