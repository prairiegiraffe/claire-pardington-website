---
import Layout from '~/layouts/PageLayout.astro';
import ThreeColumnBentoGrid from '~/components/ui/page-sections/bento-grids/ThreeColumnBentoGrid';
import TwoRowBentoGrid from '~/components/ui/page-sections/bento-grids/TwoRowBentoGrid';
import TwoRowThreeColumnBentoGrid from '~/components/ui/page-sections/bento-grids/TwoRowThreeColumnBentoGrid';

const metadata = {
  title: 'Bento Grids — Component Library',
  description: 'Collection of modern bento grid section components for development reference.',
  robots: { index: false, follow: false },
};
---

<Layout metadata={metadata}>
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Developer Warning Banner -->
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-8">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path
              fill-rule="evenodd"
              d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.19-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">Development Component Library</h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <p>
              This page is for development purposes only. Components use Tailwind UI Plus license. Do not expose to
              public.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-muted mb-2">
        <a href="/dev-components" class="hover:text-primary">Component Library</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span>Bento Grids</span>
      </div>
      <h1 class="text-4xl font-bold mb-4">Bento Grids</h1>
      <p class="text-lg text-muted max-w-3xl">
        Modern bento-style grid layout components with clear AI naming conventions. Perfect for showcasing features and
        content in visually appealing layouts.
      </p>
    </div>

    <!-- Component Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">3</div>
        <div class="text-sm text-muted">Components</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">100%</div>
        <div class="text-sm text-muted">Responsive</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">100%</div>
        <div class="text-sm text-muted">Dark Mode</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">AI Ready</div>
        <div class="text-sm text-muted">Optimized</div>
      </div>
    </div>

    <!-- Component Library -->
    <div class="space-y-16">
      <!-- Three Column Bento Grid Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <ThreeColumnBentoGrid client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Three Column Bento Grid</h3>
              <p class="text-muted mb-4">
                Modern bento-style grid with three columns featuring mobile, performance, security, and API sections
              </p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >three-column-bento-grid</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >ThreeColumnBentoGrid</code
                  >
                </div>
                <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">bento</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">grid</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">three-column</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">mobile</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">performance</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">security</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">apis</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">modern</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<ThreeColumnBentoGrid
  eyebrow="Deploy faster"
  title="Everything you need to deploy your app"
  mobileTitle="Mobile friendly"
  performanceTitle="Performance"
  securityTitle="Security"
  apisTitle="Powerful APIs"
/>`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Two Row Bento Grid Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <TwoRowBentoGrid client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Two Row Bento Grid</h3>
              <p class="text-muted mb-4">
                Two-row bento grid layout with releases, integrations, security, and performance sections
              </p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >two-row-bento-grid</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">TwoRowBentoGrid</code>
                </div>
                <div><strong>Complexity:</strong> <span class="text-yellow-600">Medium</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">bento</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">grid</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">two-row</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">releases</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">integrations</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">security</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">performance</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">6-column</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<TwoRowBentoGrid
  eyebrow="Deploy faster"
  title="Everything you need to deploy your app"
  releasesTitle="Releases"
  releasesSubtitle="Push to deploy"
  integrationsTitle="Integrations"
  securityTitle="Security"
  performanceTitle="Performance"
/>`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Two Row Three Column Bento Grid Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <TwoRowThreeColumnBentoGrid client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Two Row Three Column Bento Grid</h3>
              <p class="text-muted mb-4">
                Complex bento grid with two rows and three-column bottom section featuring performance, releases, speed,
                integrations, and network
              </p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >two-row-three-column-bento-grid</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >TwoRowThreeColumnBentoGrid</code
                  >
                </div>
                <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">bento</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">grid</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">two-row</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">three-column</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">performance</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">releases</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">speed</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">integrations</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">network</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<TwoRowThreeColumnBentoGrid
  eyebrow="Deploy faster"
  title="Everything you need to deploy your app"
  performanceTitle="Performance"
  releasesTitle="Releases"
  speedTitle="Speed"
  integrationsTitle="Integrations"
  networkTitle="Network"
/>`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Navigation -->
    <div class="mt-12 flex justify-between items-center">
      <a href="/dev-components" class="inline-flex items-center text-primary hover:text-primary/80 font-medium">
        ← Back to Component Library
      </a>
      <a href="/dev-components/cta-sections" class="inline-flex items-center text-muted hover:text-primary font-medium">
        CTA Sections →
      </a>
    </div>
  </div>
</Layout>
