---
import Layout from '~/layouts/PageLayout.astro';
import Simple404 from '~/components/ui/page-sections/404-pages/Simple404';
import SplitWith404Image from '~/components/ui/page-sections/404-pages/SplitWith404Image';
import WithPopularPages404 from '~/components/ui/page-sections/404-pages/WithPopularPages404';
import WithBackgroundImage404 from '~/components/ui/page-sections/404-pages/WithBackgroundImage404';
import WithNavbarAndFooter404 from '~/components/ui/page-sections/404-pages/WithNavbarAndFooter404';
import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: '404 Pages — Component Library',
  description: 'Collection of 404 error page components for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
const components = getComponentsBySubcategory('404-pages');
---

<Layout metadata={metadata}>
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Developer Warning Banner -->
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-8">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path
              fill-rule="evenodd"
              d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.19-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z"
              clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">Development Component Library</h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <p>
              This page is for development purposes only. Components use Tailwind UI Plus license. Do not expose to
              public.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-muted mb-2">
        <a href="/dev-components" class="hover:text-primary">Component Library</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span>404 Pages</span>
      </div>
      <h1 class="text-4xl font-bold mb-4">404 Pages</h1>
      <p class="text-lg text-muted max-w-3xl">
        Error page layouts with clear AI naming conventions. Perfect for handling page not found scenarios gracefully.
      </p>
    </div>

    <!-- Component Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">5</div>
        <div class="text-sm text-muted">Components</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">100%</div>
        <div class="text-sm text-muted">Responsive</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">100%</div>
        <div class="text-sm text-muted">Dark Mode</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">AI Ready</div>
        <div class="text-sm text-muted">Optimized</div>
      </div>
    </div>

    <!-- Component Library -->
    <div class="space-y-16">
      <!-- Simple 404 Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <Simple404 client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Simple 404</h3>
              <p class="text-muted mb-4">Centered 404 page with minimal design and dual CTAs</p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">simple-404</code>
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">Simple404</code>
                </div>
                <div><strong>Complexity:</strong> <span class="text-green-600">Simple</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'simple-404')
                      ?.tags.map((tag) => (
                        <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                      ))
                  }
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<Simple404 />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Split with Image 404 Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SplitWith404Image client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Split with Image 404</h3>
              <p class="text-muted mb-4">Split layout 404 page with company logo, footer, and side image</p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >split-with-404-image</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">SplitWith404Image</code
                  >
                </div>
                <div><strong>Complexity:</strong> <span class="text-yellow-600">Medium</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'split-with-404-image')
                      ?.tags.map((tag) => (
                        <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                      ))
                  }
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<SplitWith404Image />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- With Popular Pages 404 Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <WithPopularPages404 client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">With Popular Pages 404</h3>
              <p class="text-muted mb-4">404 page with popular pages list, company logo, and social links footer</p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >with-popular-pages-404</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >WithPopularPages404</code
                  >
                </div>
                <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'with-popular-pages-404')
                      ?.tags.map((tag) => (
                        <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                      ))
                  }
                </div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Dependencies:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'with-popular-pages-404')
                      ?.dependencies?.map((dep) => (
                        <code class="text-xs bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded">{dep}</code>
                      ))
                  }
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<WithPopularPages404 />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- With Background Image 404 Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <WithBackgroundImage404 client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">With Background Image 404</h3>
              <p class="text-muted mb-4">Full-screen 404 page with background image and overlay text</p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >with-background-image-404</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >WithBackgroundImage404</code
                  >
                </div>
                <div><strong>Complexity:</strong> <span class="text-yellow-600">Medium</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'with-background-image-404')
                      ?.tags.map((tag) => (
                        <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                      ))
                  }
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<WithBackgroundImage404 />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- With Navbar and Footer 404 Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <WithNavbarAndFooter404 client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">With Navbar and Footer 404</h3>
              <p class="text-muted mb-4">
                Complete 404 page with full navigation header, mobile menu, and detailed footer
              </p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >with-navbar-and-footer-404</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >WithNavbarAndFooter404</code
                  >
                </div>
                <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'with-navbar-and-footer-404')
                      ?.tags.map((tag) => (
                        <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                      ))
                  }
                </div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Dependencies:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'with-navbar-and-footer-404')
                      ?.dependencies?.map((dep) => (
                        <code class="text-xs bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded">{dep}</code>
                      ))
                  }
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<WithNavbarAndFooter404 />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Navigation -->
    <div class="mt-12 flex justify-between items-center">
      <a href="/dev-components" class="inline-flex items-center text-primary hover:text-primary/80 font-medium">
        ← Back to Component Library
      </a>
      <a
        href="/dev-components/hero-sections"
        class="inline-flex items-center text-muted hover:text-primary font-medium"
      >
        Hero Sections →
      </a>
    </div>
  </div>
</Layout>
