---
import Layout from '~/layouts/PageLayout.astro';
import SideBySideWithDetails from '~/components/ui/page-sections/newsletter-sections/SideBySideWithDetails';
import SimpleSideBySide from '~/components/ui/page-sections/newsletter-sections/SimpleSideBySide';
import SimpleSideBySideOnBrand from '~/components/ui/page-sections/newsletter-sections/SimpleSideBySideOnBrand';
import SimpleStacked from '~/components/ui/page-sections/newsletter-sections/SimpleStacked';
import CenteredCard from '~/components/ui/page-sections/newsletter-sections/CenteredCard';
import SideBySideOnCard from '~/components/ui/page-sections/newsletter-sections/SideBySideOnCard';
import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: 'Newsletter Sections — Component Library',
  description: 'Collection of newsletter section components for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
const components = getComponentsBySubcategory('newsletter-sections');
---

<Layout metadata={metadata}>
  <div class="container mx-auto px-4 py-8 max-w-7xl">

    <!-- Developer Warning Banner -->
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-8">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.19-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
            Development Component Library
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <p>This page is for development purposes only. Components use Tailwind UI Plus license. Do not expose to public.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-muted mb-2">
        <a href="/dev-components" class="hover:text-primary">Component Library</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span>Newsletter Sections</span>
      </div>
      <h1 class="text-4xl font-bold mb-4">Newsletter Sections</h1>
      <p class="text-lg text-muted max-w-3xl">
        Email signup forms and newsletter subscription sections for marketing pages and user engagement.
      </p>
    </div>

    <!-- Component Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">{components.length}</div>
        <div class="text-sm text-muted">Components</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">100%</div>
        <div class="text-sm text-muted">Responsive</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">100%</div>
        <div class="text-sm text-muted">Dark Mode</div>
      </div>
      <div class="bg-white dark:bg-gray-900 rounded-lg border p-4">
        <div class="text-2xl font-bold text-primary mb-1">AI Ready</div>
        <div class="text-sm text-muted">Optimized</div>
      </div>
    </div>

    <!-- Component Library -->
    <div class="space-y-16">

      <!-- Side-by-side with Details Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SideBySideWithDetails client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Side-by-side with Details</h3>
              <p class="text-muted mb-4">Newsletter signup with feature details and gradient background</p>

              <div class="text-sm space-y-2">
                <div><strong>AI Reference:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">side-by-side-with-details</code></div>
                <div><strong>Component:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">SideBySideWithDetails</code></div>
                <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">newsletter</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">side-by-side</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">features</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">icons</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">gradient</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<SideBySideWithDetails />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Simple Side-by-side Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SimpleSideBySide client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Simple Side-by-side</h3>
              <p class="text-muted mb-4">Clean side-by-side layout with privacy policy link</p>

              <div class="text-sm space-y-2">
                <div><strong>AI Reference:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">simple-side-by-side</code></div>
                <div><strong>Component:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">SimpleSideBySide</code></div>
                <div><strong>Complexity:</strong> <span class="text-green-600">Simple</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">newsletter</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">side-by-side</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">simple</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">privacy</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<SimpleSideBySide />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Simple Side-by-side on Brand Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SimpleSideBySideOnBrand client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Simple Side-by-side on Brand</h3>
              <p class="text-muted mb-4">Brand-colored background with white form elements</p>

              <div class="text-sm space-y-2">
                <div><strong>AI Reference:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">simple-side-by-side-on-brand</code></div>
                <div><strong>Component:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">SimpleSideBySideOnBrand</code></div>
                <div><strong>Complexity:</strong> <span class="text-green-600">Simple</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">newsletter</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">side-by-side</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">brand</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">indigo</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<SimpleSideBySideOnBrand />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Simple Stacked Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SimpleStacked client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Simple Stacked</h3>
              <p class="text-muted mb-4">Vertical layout with title above form</p>

              <div class="text-sm space-y-2">
                <div><strong>AI Reference:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">simple-stacked</code></div>
                <div><strong>Component:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">SimpleStacked</code></div>
                <div><strong>Complexity:</strong> <span class="text-green-600">Simple</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">newsletter</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">stacked</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">simple</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">vertical</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<SimpleStacked />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Centered Card Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <CenteredCard client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Centered Card</h3>
              <p class="text-muted mb-4">Dark card with gradient background and centered form</p>

              <div class="text-sm space-y-2">
                <div><strong>AI Reference:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">centered-card</code></div>
                <div><strong>Component:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">CenteredCard</code></div>
                <div><strong>Complexity:</strong> <span class="text-orange-600">Medium</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">newsletter</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">centered</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">card</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">dark</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">gradient</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<CenteredCard />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Side-by-side on Card Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SideBySideOnCard client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Side-by-side on Card</h3>
              <p class="text-muted mb-4">Dark card with side-by-side layout and gradient background</p>

              <div class="text-sm space-y-2">
                <div><strong>AI Reference:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">side-by-side-on-card</code></div>
                <div><strong>Component:</strong> <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">SideBySideOnCard</code></div>
                <div><strong>Complexity:</strong> <span class="text-orange-600">Medium</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">newsletter</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">side-by-side</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">card</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">dark</span>
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">gradient</span>
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<SideBySideOnCard />`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

    </div>

    <!-- Navigation -->
    <div class="mt-12 flex justify-between items-center">
      <a
        href="/dev-components"
        class="inline-flex items-center text-primary hover:text-primary/80 font-medium"
      >
        ← Back to Component Library
      </a>
      <a
        href="/styles-guide"
        class="inline-flex items-center text-muted hover:text-primary font-medium"
      >
        Styles Guide →
      </a>
    </div>

  </div>
</Layout>