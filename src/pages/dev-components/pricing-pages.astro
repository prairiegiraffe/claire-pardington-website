---
import Layout from '~/layouts/Layout.astro';
import DevComponentsSidebar from '~/components/ui/DevComponentsSidebar.astro';
import CompleteWithFAQsPricingPage from '~/components/ui/page-examples/pricing-pages/CompleteWithFAQsPricingPage';
import ComparisonTablePricingPage from '~/components/ui/page-examples/pricing-pages/ComparisonTablePricingPage';
import TestimonialsWithNewsletterPricingPage from '~/components/ui/page-examples/pricing-pages/TestimonialsWithNewsletterPricingPage';
import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: 'Pricing Pages — Component Library',
  description: 'Collection of complete pricing page templates for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
const components = getComponentsBySubcategory('pricing-pages');
---

<Layout metadata={metadata}>
<DevComponentsSidebar>
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-muted mb-2">
        <a href="/dev-components" class="hover:text-primary">Component Library</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span>Pricing Pages</span>
      </div>
      <h1 class="text-4xl font-bold mb-4">Pricing Pages</h1>
      <p class="text-lg text-muted max-w-3xl">
        Complete pricing page templates with clear AI naming conventions. Perfect for showcasing pricing plans and
        converting visitors to customers.
      </p>
    </div>

    <!-- Component Library -->
    <div class="space-y-16">
      <!-- Complete Pricing Page with FAQs Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <CompleteWithFAQsPricingPage client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Complete Pricing Page with FAQs</h3>
              <p class="text-muted mb-4">
                Full-featured pricing page with navigation, pricing tiers, testimonial, FAQs, and footer
              </p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >complete-with-faqs-pricing-page</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >CompleteWithFAQsPricingPage</code
                  >
                </div>
                <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'complete-with-faqs-pricing-page')
                      ?.tags.map((tag) => (
                        <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                      ))
                  }
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<CompleteWithFAQsPricingPage
  // This is a complete page template
  // All content is built-in with pricing data,
  // navigation, FAQs, and footer sections
  // Perfect for showcasing full pricing solutions
/>`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Comparison Table Pricing Page Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <ComparisonTablePricingPage client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Comparison Table Pricing Page</h3>
              <p class="text-muted mb-4">
                Advanced pricing page with detailed feature comparison table, dark header, and gradient backgrounds
              </p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >comparison-table-pricing-page</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >ComparisonTablePricingPage</code
                  >
                </div>
                <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'comparison-table-pricing-page')
                      ?.tags.map((tag) => (
                        <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                      ))
                  }
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<ComparisonTablePricingPage
  // This is a complete pricing page template
  // Features:
  // - Dark navigation header
  // - Three-tier pricing with gradient background
  // - Detailed feature comparison table (mobile + desktop)
  // - FAQ section in grid layout
  // - Complete footer with social links
  // Perfect for enterprise pricing pages
/>`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Testimonials with Newsletter Pricing Page Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <TestimonialsWithNewsletterPricingPage client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Testimonials with Newsletter Pricing Page</h3>
              <p class="text-muted mb-4">
                Clean pricing page with testimonials grid, newsletter signup, and minimal navigation
              </p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >testimonials-with-newsletter-pricing-page</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >TestimonialsWithNewsletterPricingPage</code
                  >
                </div>
                <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'testimonials-with-newsletter-pricing-page')
                      ?.tags.map((tag) => (
                        <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                      ))
                  }
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<TestimonialsWithNewsletterPricingPage
  // This is a complete pricing page template
  // Features:
  // - Clean minimal navigation
  // - Three-tier pricing with gradient accents
  // - Testimonials grid section
  // - Newsletter signup with privacy policy
  // - Complete footer with social links
  // Perfect for clean, testimonial-focused pricing
/>`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Navigation -->
    <div class="mt-12 flex justify-between items-center">
      <a href="/dev-components" class="inline-flex items-center text-primary hover:text-primary/80 font-medium">
        ← Back to Component Library
      </a>
      <a href="/styles-guide" class="inline-flex items-center text-muted hover:text-primary font-medium">
        Styles Guide →
      </a>
    </div>
  </div>
</DevComponentsSidebar>
</Layout>
