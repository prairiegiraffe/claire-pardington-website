---
import Layout from '~/layouts/Layout.astro';
import DevComponentsSidebar from '~/components/ui/DevComponentsSidebar.astro';
import OffsetWithSupportingText from '~/components/ui/page-sections/faqs/OffsetWithSupportingText';
import CenteredAccordion from '~/components/ui/page-sections/faqs/CenteredAccordion';
import SideBySide from '~/components/ui/page-sections/faqs/SideBySide';
import ThreeColumns from '~/components/ui/page-sections/faqs/ThreeColumns';
import ThreeColumnsWithCenteredIntroduction from '~/components/ui/page-sections/faqs/ThreeColumnsWithCenteredIntroduction';
import TwoColumns from '~/components/ui/page-sections/faqs/TwoColumns';
import TwoColumnsWithCenteredIntroduction from '~/components/ui/page-sections/faqs/TwoColumnsWithCenteredIntroduction';
import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: 'FAQ Sections — Component Library',
  description: 'Collection of FAQ section components for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
const components = getComponentsBySubcategory('faqs');
---

<Layout metadata={metadata}>
