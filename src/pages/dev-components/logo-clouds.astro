---
import Layout from '~/layouts/Layout.astro';
import DevComponentsSidebar from '~/components/ui/DevComponentsSidebar.astro';
import SimpleWithHeading from '~/components/ui/page-sections/logo-clouds/SimpleWithHeading';
import SimpleWithCallToAction from '~/components/ui/page-sections/logo-clouds/SimpleWithCallToAction';
import SimpleLeftAligned from '~/components/ui/page-sections/logo-clouds/SimpleLeftAligned';
import SplitWithLogosOnRight from '~/components/ui/page-sections/logo-clouds/SplitWithLogosOnRight';
import Simple from '~/components/ui/page-sections/logo-clouds/Simple';
import Grid from '~/components/ui/page-sections/logo-clouds/Grid';
import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: 'Logo Clouds — Component Library',
  description: 'Collection of logo cloud components for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
const components = getComponentsBySubcategory('logo-clouds');
---

<Layout metadata={metadata}>
<DevComponentsSidebar>
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center gap-2 text-sm text-muted mb-2">
        <a href="/dev-components" class="hover:text-primary">Component Library</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span>Logo Clouds</span>
      </div>
      <h1 class="text-4xl font-bold mb-4">Logo Clouds</h1>
      <p class="text-lg text-muted max-w-3xl">
        Company logo collection components with clear AI naming conventions. Perfect for building trust and showcasing
        partnerships.
      </p>
    </div>

    <!-- Component Library -->
    <div class="space-y-16">
      <!-- Simple with Heading Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SimpleWithHeading client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Simple with Heading</h3>
              <p class="text-muted mb-4">Logo cloud with centered heading and company logos in grid layout</p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >simple-with-heading-logo-cloud</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">SimpleWithHeading</code
                  >
                </div>
                <div><strong>Complexity:</strong> <span class="text-green-600">Simple</span></div>
              </div>

              <div class="mt-4">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                <div class="flex flex-wrap gap-1">
                  {
                    components
                      .find((c) => c.id === 'simple-with-heading-logo-cloud')
                      ?.tags.map((tag) => (
                        <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                      ))
                  }
                </div>
              </div>
            </div>

            <div class="lg:col-span-2">
              <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
              <pre
                class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<SimpleWithHeading
  heading="Trusted by the world's most innovative teams"
  logos={[
    { src: 'logo1.svg', alt: 'Company 1' },
    { src: 'logo2.svg', alt: 'Company 2' }
  ]}
/>`}</code>
              </pre>
            </div>
          </div>
        </div>
      </section>

      <!-- Simple with Call-to-Action Component -->
      <section class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
        <!-- Component Preview -->
        <div class="border-b border-gray-200 dark:border-gray-700">
          <SimpleWithCallToAction client:load />
        </div>

        <!-- Component Info -->
        <div class="p-6 bg-gray-50 dark:bg-gray-800">
          <div class="grid lg:grid-cols-3 gap-6">
            <div class="lg:col-span-1">
              <h3 class="text-xl font-semibold text-primary mb-2">Simple with Call-to-Action</h3>
              <p class="text-muted mb-4">Logo cloud with company logos and call-to-action link below</p>

              <div class="text-sm space-y-2">
                <div>
                  <strong>AI Reference:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                    >simple-with-call-to-action-logo-cloud</code
                  >
                </div>
                <div>
                  <strong>Component:</strong>
                  <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
