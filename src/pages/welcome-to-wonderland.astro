import img01 from '~/assets/images/Wonderland/01.webp';
import img02 from '~/assets/images/Wonderland/02.webp';
import img03 from '~/assets/images/Wonderland/03.webp';
import img04 from '~/assets/images/Wonderland/04.webp';
import img05 from '~/assets/images/Wonderland/05.webp';
import img06 from '~/assets/images/Wonderland/06.webp';
import img07 from '~/assets/images/Wonderland/07.webp';
import img08 from '~/assets/images/Wonderland/08.webp';
import img09 from '~/assets/images/Wonderland/09.webp';
import img10 from '~/assets/images/Wonderland/10.webp';
import img11 from '~/assets/images/Wonderland/11.webp';
import img12 from '~/assets/images/Wonderland/12.webp';
import img13 from '~/assets/images/Wonderland/13.webp';
import img14 from '~/assets/images/Wonderland/14.webp';
import img15 from '~/assets/images/Wonderland/15.webp';

const metadata = {
  title: 'Welcome to Wonderland - Claire Pardington',
};

const journalImages = [
  img01.src,
  img02.src,
  img03.src,
  img04.src,
  img05.src,
  img06.src,
  img07.src,
  img08.src,
  img09.src,
  img10.src,
  img11.src,
  img12.src,
  img13.src,
  img14.src,
  img15.src,
];
---

<Layout metadata={metadata}>
  <!-- Back to Works Button -->
  <div class="py-8 pl-4 md:pl-10">
    <a
      href="/works"
      class="inline-flex items-center gap-2 text-black hover:opacity-70 transition-opacity uppercase tracking-wide text-sm"
    >
      <svg
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M19 12H5M12 19l-7-7 7-7"></path>
      </svg>
      Back to Works
    </a>
  </div>

  <FlipBookTurnJS images={journalImages} title="WELCOME TO WONDERLAND" />
</Layout>

<script is:inline src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script is:inline src="/turn.min.js"></script>
