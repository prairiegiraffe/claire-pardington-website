---
import Layout from '~/layouts/Layout.astro';
import DevComponentsSidebar from '~/components/ui/DevComponentsSidebar.astro';
import ComprehensiveAbout from '~/components/ui/page-sections/about-sections/ComprehensiveAbout';
import TimelineAbout from '~/components/ui/page-sections/about-sections/TimelineAbout';
import IconValuesAbout from '~/components/ui/page-sections/about-sections/IconValuesAbout';
import { getComponentsBySubcategory } from '~/lib/component-registry';

const metadata = {
  title: 'About Pages — Component Library',
  description: 'Collection of about page components for development reference.',
  robots: { index: false, follow: false },
};

// Get components for this subcategory
const components = getComponentsBySubcategory('about-sections');
---

<Layout metadata={metadata}>
  <DevComponentsSidebar>
    <div class="container mx-auto px-4 py-8 max-w-7xl">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex items-center gap-2 text-sm text-muted mb-2">
          <a href="/dev-components" class="hover:text-primary">Component Library</a>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span>About Pages</span>
        </div>
        <h1 class="text-4xl font-bold mb-4">About Pages</h1>
        <p class="text-lg text-muted max-w-3xl">
          Complete about page components with AI naming conventions. Perfect for showcasing company mission, values,
          team, and more.
        </p>
      </div>

      <!-- Component Library -->
      <div class="space-y-16">
        <!-- Comprehensive About Component -->
        <section
          id="comprehensive-about"
          class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden"
        >
          <!-- Component Preview -->
          <div class="relative overflow-hidden border-b border-gray-200 dark:border-gray-700">
            <ComprehensiveAbout client:load />
          </div>

          <!-- Component Info -->
          <div class="p-6 bg-gray-50 dark:bg-gray-800">
            <div class="grid lg:grid-cols-3 gap-6">
              <div class="lg:col-span-1">
                <h3 class="text-xl font-semibold text-primary mb-2">Comprehensive About</h3>
                <p class="text-muted mb-4">
                  Complete about page with hero, mission, values, team, blog, and footer sections
                </p>

                <div class="text-sm space-y-2">
                  <div>
                    <strong>AI Reference:</strong>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                      >comprehensive-about</code
                    >
                  </div>
                  <div>
                    <strong>Component:</strong>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                      >ComprehensiveAbout</code
                    >
                  </div>
                  <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
                </div>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                  <div class="flex flex-wrap gap-1">
                    {
                      components
                        .find((c) => c.id === 'comprehensive-about')
                        ?.tags.map((tag) => (
                          <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                        ))
                    }
                  </div>
                </div>
              </div>

              <div class="lg:col-span-2">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
                <pre
                  class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<ComprehensiveAbout />`}</code>
              </pre>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Features:</h4>
                  <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1">
                    <li>• Full navigation header with mobile menu</li>
                    <li>• Hero section with image tiles gallery</li>
                    <li>• Mission statement with statistics</li>
                    <li>• Company values grid layout</li>
                    <li>• Logo cloud with trusted partners</li>
                    <li>• Team member showcase grid</li>
                    <li>• Blog posts with background images</li>
                    <li>• Footer with social links</li>
                    <li>• Full dark mode support</li>
                    <li>• Responsive across all breakpoints</li>
                  </ul>
                </div>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Dependencies:</h4>
                  <div class="flex flex-wrap gap-2">
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-xs">@headlessui/react</code>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-xs"
                      >@heroicons/react/24/outline</code
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Timeline About Component -->
        <section id="timeline-about" class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
          <!-- Component Preview -->
          <div class="relative overflow-hidden border-b border-gray-200 dark:border-gray-700">
            <TimelineAbout client:load />
          </div>

          <!-- Component Info -->
          <div class="p-6 bg-gray-50 dark:bg-gray-800">
            <div class="grid lg:grid-cols-3 gap-6">
              <div class="lg:col-span-1">
                <h3 class="text-xl font-semibold text-primary mb-2">Timeline About</h3>
                <p class="text-muted mb-4">
                  About page with timeline, logo cloud, people gallery, stats cards, and job listings
                </p>

                <div class="text-sm space-y-2">
                  <div>
                    <strong>AI Reference:</strong>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">timeline-about</code>
                  </div>
                  <div>
                    <strong>Component:</strong>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">TimelineAbout</code>
                  </div>
                  <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
                </div>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                  <div class="flex flex-wrap gap-1">
                    {
                      components
                        .find((c) => c.id === 'timeline-about')
                        ?.tags.map((tag) => (
                          <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                        ))
                    }
                  </div>
                </div>
              </div>

              <div class="lg:col-span-2">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
                <pre
                  class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<TimelineAbout />`}</code>
              </pre>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Features:</h4>
                  <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1">
                    <li>• Navigation header with mobile menu</li>
                    <li>• Hero section with gradient background and skewed design</li>
                    <li>• Company timeline with milestone markers</li>
                    <li>• Logo cloud section with customer testimonials</li>
                    <li>• People gallery with multiple image layouts</li>
                    <li>• Statistics cards with different background colors</li>
                    <li>• Job listings section with positions and salaries</li>
                    <li>• Newsletter signup form</li>
                    <li>• Comprehensive footer with multiple link sections</li>
                    <li>• Full dark mode support and responsive design</li>
                  </ul>
                </div>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Dependencies:</h4>
                  <div class="flex flex-wrap gap-2">
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-xs">@headlessui/react</code>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-xs"
                      >@heroicons/react/24/outline</code
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Icon Values About Component -->
        <section id="icon-values-about" class="border border-gray-200 dark:border-gray-700 rounded-xl overflow-hidden">
          <!-- Component Preview -->
          <div class="relative overflow-hidden border-b border-gray-200 dark:border-gray-700">
            <IconValuesAbout client:load />
          </div>

          <!-- Component Info -->
          <div class="p-6 bg-gray-50 dark:bg-gray-800">
            <div class="grid lg:grid-cols-3 gap-6">
              <div class="lg:col-span-1">
                <h3 class="text-xl font-semibold text-primary mb-2">Icon Values About</h3>
                <p class="text-muted mb-4">
                  About page with icon-based values, team cards, stats grid, and job benefits CTA
                </p>

                <div class="text-sm space-y-2">
                  <div>
                    <strong>AI Reference:</strong>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs"
                      >icon-values-about</code
                    >
                  </div>
                  <div>
                    <strong>Component:</strong>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded font-mono text-xs">IconValuesAbout</code
                    >
                  </div>
                  <div><strong>Complexity:</strong> <span class="text-red-600">Complex</span></div>
                </div>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags:</h4>
                  <div class="flex flex-wrap gap-1">
                    {
                      components
                        .find((c) => c.id === 'icon-values-about')
                        ?.tags.map((tag) => (
                          <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded-full">{tag}</span>
                        ))
                    }
                  </div>
                </div>
              </div>

              <div class="lg:col-span-2">
                <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Usage Example:</h4>
                <pre
                  class="bg-gray-100 dark:bg-gray-900 p-4 rounded-lg text-xs overflow-x-auto">
                <code>{`<IconValuesAbout />`}</code>
              </pre>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Features:</h4>
                  <ul class="text-sm text-gray-600 dark:text-gray-400 space-y-1">
                    <li>• Navigation header with mobile menu</li>
                    <li>• Centered hero section with gradient background</li>
                    <li>• Two-column content description</li>
                    <li>• Stats grid with border-left styling</li>
                    <li>• Full-width office image section</li>
                    <li>• Icon-based values grid with Heroicons</li>
                    <li>• Team member cards with locations</li>
                    <li>• Join team CTA with benefits checklist</li>
                    <li>• Comprehensive footer with logo and links</li>
                    <li>• Full dark mode support and responsive design</li>
                  </ul>
                </div>

                <div class="mt-4">
                  <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Dependencies:</h4>
                  <div class="flex flex-wrap gap-2">
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-xs">@headlessui/react</code>
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-xs"
                      >@heroicons/react/24/outline</code
                    >
                    <code class="bg-gray-200 dark:bg-gray-700 px-2 py-1 rounded text-xs">@heroicons/react/20/solid</code
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>

      <!-- Navigation -->
      <div class="mt-12 flex justify-between items-center">
        <a href="/dev-components" class="inline-flex items-center text-primary hover:text-primary/80 font-medium">
          ← Back to Component Library
        </a>
        <a href="/styles-guide" class="inline-flex items-center text-muted hover:text-primary font-medium">
          Styles Guide →
        </a>
      </div>
    </div>
  </DevComponentsSidebar>
</Layout>
