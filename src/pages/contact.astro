---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Contact - Claire Pardington',
};
---

<Layout metadata={metadata}>
  <div class="max-w-2xl mx-auto px-4 py-16 md:py-24">
    <!-- Heading -->
    <h1 class="text-3xl md:text-4xl font-light text-center mb-8">Contact</h1>

    <!-- Description -->
    <p class="text-center text-base md:text-lg leading-relaxed mb-8">
      I am available for commissions, collaborations, and other creative inquiries. I am based in NYC but work
      globally. I look forward to hearing from you!
    </p>

    <!-- Email -->
    <p class="text-center text-base md:text-lg mb-8">
      <a href="mailto:clairepardington@gmail.com" class="hover:opacity-70 transition-opacity">
        clairepardington@gmail.com
      </a>
    </p>

    <!-- Social Icons -->
    <div class="flex justify-center gap-6 mb-12">
      <a
        href="https://www.instagram.com/clairepardington/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-black hover:opacity-70 transition-opacity"
        aria-label="Instagram"
      >
        <Icon name="tabler:brand-instagram" class="w-8 h-8" />
      </a>
      <a
        href="https://www.linkedin.com/in/clairepardington/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-black hover:opacity-70 transition-opacity"
        aria-label="LinkedIn"
      >
        <Icon name="tabler:brand-linkedin" class="w-8 h-8" />
      </a>
      <a
        href="https://www.pinterest.com/cpardington/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-black hover:opacity-70 transition-opacity"
        aria-label="Pinterest"
      >
        <Icon name="tabler:brand-pinterest" class="w-8 h-8" />
      </a>
    </div>

    <!-- Contact Form -->
    <form class="space-y-6" method="POST" action="https://api.web3forms.com/submit">
      <input type="hidden" name="access_key" value="81957d0d-42c1-4ddf-93f7-280ec20b9274" />
      <input type="hidden" name="subject" value="New Contact Form Submission from Claire Pardington Website" />
      <input type="hidden" name="from_name" value="Claire Pardington Website" />

      <div>
        <label for="name" class="block text-sm font-medium mb-2">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-medium mb-2">Email*</label>
        <input
          type="email"
          id="email"
          name="email"
          required
          class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent"
        />
      </div>

      <div>
        <label for="message" class="block text-sm font-medium mb-2">Message*</label>
        <textarea
          id="message"
          name="message"
          required
          rows="6"
          class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent resize-none"
        ></textarea>
      </div>

      <div class="text-center">
        <button
          type="submit"
          class="px-8 py-3 bg-black text-white uppercase tracking-wide text-sm hover:bg-gray-800 transition-colors"
        >
          Submit
        </button>
      </div>
    </form>
  </div>
</Layout>
