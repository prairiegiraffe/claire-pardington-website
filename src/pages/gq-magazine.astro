---
import Layout from '~/layouts/PageLayout.astro';
import gq1 from '~/assets/images/GQ Magazine/760x76000.jpeg';
import gq2 from '~/assets/images/GQ Magazine/760x76000 (1).jpeg';
import gq3 from '~/assets/images/GQ Magazine/760x76000 (2).jpeg';
import gq4 from '~/assets/images/GQ Magazine/760x76000 (3).jpeg';
import gq5 from '~/assets/images/GQ Magazine/760x76000 (4).jpeg';
import gq6 from '~/assets/images/GQ Magazine/760x76000 (5).jpeg';
import gq7 from '~/assets/images/GQ Magazine/760x76000 (6).jpeg';

const metadata = {
  title: 'GQ Magazine 2015',
};

const gqImages = [
  { src: gq1.src, alt: 'GQ Magazine 2015 - Image 1' },
  { src: gq2.src, alt: 'GQ Magazine 2015 - Image 2' },
  { src: gq3.src, alt: 'GQ Magazine 2015 - Image 3' },
  { src: gq4.src, alt: 'GQ Magazine 2015 - Image 4' },
  { src: gq5.src, alt: 'GQ Magazine 2015 - Image 5' },
  { src: gq6.src, alt: 'GQ Magazine 2015 - Image 6' },
  { src: gq7.src, alt: 'GQ Magazine 2015 - Image 7' },
];
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-7xl">
    {/* Heading */}
    <div class="flex justify-center mb-12">
      <h1 class="text-4xl md:text-5xl font-light text-center">GQ MAGAZINE 2015</h1>
    </div>

    {/* Masonry Gallery */}
    <div class="columns-1 sm:columns-2 lg:columns-3 gap-[10px]">
      {
        gqImages.map((image) => (
          <div class="break-inside-avoid mb-[10px]">
            <img src={image.src} alt={image.alt} class="w-full h-auto object-cover" />
          </div>
        ))
      }
    </div>
  </section>
</Layout>
